<%- include('navBarHead') %>
<title>Admin - Product Listing</title>
<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<div class="bg-gray-100">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-8">Admin - Product Listing</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white p-6 rounded-md shadow-md">
                    <a href="/edit/<%= product.ProductID %>" class="hover:no-underline">
                        <h2 class="text-xl font-semibold mb-4"><%= product.ProdName %></h2>
                        <p class="text-gray-700 mb-4"><%= product.ProdDesc %></p>
                        <p class="text-gray-800 font-bold">Price: $<%= product.ProdPrice.toFixed(2) %></p>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</div>