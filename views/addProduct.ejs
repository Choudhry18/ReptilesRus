<%- include('navBarHead') %>
<title>Add Product</title>

<div class="container mx-auto py-8">
    <div class="max-w-4xl mx-auto bg-white shadow-md p-8 rounded-lg">
        <h1 class="text-3xl font-bold mb-4">Add New Product</h1>
        <form action="/addProduct" method="POST">
            <!-- No hidden input for ProductID as it's a new product -->
            <div class="mb-4">
                <label for="prodName" class="block text-gray-700 font-bold mb-2">Product Name</label>
                <input type="text" id="prodName" name="prodName" class="w-full rounded-md border-gray-300 px-4 py-2" required>
            </div>
            <div class="mb-4">
                <label for="prodDesc" class="block text-gray-700 font-bold mb-2">Description</label>
                <textarea id="prodDesc" name="prodDesc" class="w-full rounded-md border-gray-300 px-4 py-2" required></textarea>
            </div>
            <div class="mb-4">
                <label for="prodPrice" class="block text-gray-700 font-bold mb-2">Price</label>
                <input type="number" id="prodPrice" name="prodPrice" step="0.01" min="0" class="w-full rounded-md border-gray-300 px-4 py-2" required>
            </div>
            <div class="mb-4">
                <label for="prodQuantity" class="block text-gray-700 font-bold mb-2">Quantity</label>
                <input type="number" id="prodQuantity" name="prodQuantity" min="0" class="w-full rounded-md border-gray-300 px-4 py-2" required>
            </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add Product</button>
        </form>
    </div>
</div>